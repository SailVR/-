/**app.wxss**/

page {
  height: 100%;
  background-color: #efeff4;
}

view, scroll-view, input, text{
  box-sizing: border-box;  
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.wx-cells {
  width: 100%;
  margin-top: 45rpx;
  font-size: 34rpx;
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
  background-color: #fff;
}

.wx-cell {
  padding: 20rpx 25rpx;
  display: flex;
  align-items: center;
}

.wx-cell-icon{
  width: 56rpx;
  height: 56rpx;
}

.wx-cell-text{
  flex: 1;
  margin-left: 30rpx;
}

.wx-cell-arrow{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.wx-cell-inner{
  padding: 30rpx 30rpx 30rpx 0;  
  margin-left: 30rpx; 
  border-bottom: 1rpx solid #d9d9d9; 
}

.wx-cell-left{
  font-size: 35rpx;
  align-items: center;
}

.wx-cell-right{
  align-items: center;
}

.wx-cell-right-text{
  font-size: 30rpx;
  color: #808080;
}

.share-modal{
  position: absolute;
  left: 200rpx;
  top: 400rpx;
  width: 400rpx;
  height: 300rpx;
  background-color: skyblue;
}
.share-item{
  float: left;
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  margin-right: 30rpx;
}
.share-img{
    width: 100rpx;
    height: 100rpx;
}
.share-text{
  text-align: center;
  background-color: skyblue;
  width: 400rpx;
  height: 50rpx;
  position: absolute;
  bottom: 0;
  color: green;
}