page,.page {
  height: 100%;
}
.page-bottom{
  height: 100%;
  width: 750rpx;
  position: fixed; 
  background-color:skyblue;  
  z-index: 0;
}
.content{
  color: white;
  padding: 30rpx 0 30rpx 40rpx;
}
.page-content{
  padding-top: 300rpx;
}
.page-top{
  height: 100%;
   position: fixed; 
  width: 750rpx;
  background-color: white;
  z-index: 0;
  transition: All 0.4s ease; 
}
.page-top image{
  position: absolute;
  width: 68rpx;
  height: 38rpx;
  left: 20rpx;
  top: 20rpx;
}
.c-state1{
  transform: rotate(0deg) scale(1) translate(50%,0%); 
}
.c-state2{
  transform: rotate(0deg) scale(.8) translate(50%,0%); 
}
.text{
  margin: auto;
  margin-top: 20rpx;
  margin-left: 130rpx;
  vertical-align: middle;
  color: white;
}
.mail-box{
  width: 100%;
  height: 100px;
  background-color: pink;
}
.box-top{
  width: 100%;
  height: 30px;
}